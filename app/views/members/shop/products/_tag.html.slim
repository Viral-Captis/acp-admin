- if params[:tag_id] == tag.id.to_s
  = link_to params.merge(tag_id: nil) do
    span class='flex items-center border border-green-400 hover:border-green-500 dark:border-green-600 py-1 px-2 rounded-full text-gray-600 dark:text-gray-300 hover:text-white text-xs bg-green-400 dark:bg-green-600 hover:bg-green-500'
      = tag.emoji
      span class='ml-1'
        = tag.name
- else
  = link_to params.merge(tag_id: tag.id) do
    span class='flex items-center dark:text-gray-400 border dark:border-gray-700 py-1 px-2 rounded-full text-gray-500 hover:text-white text-xs bg-gray-100 dark:bg-gray-700 hover:bg-green-500 hover:border-green-500'
      = tag.emoji
      span class='ml-1'
        = tag.name
